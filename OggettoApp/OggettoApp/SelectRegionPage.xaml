<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OggettoApp.SelectRegionPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout Margin="20,40,0,0">
        <Label Text="Oggy game" FontSize="24" FontAttributes="Bold" TextColor="Black"></Label>
        <Label Text="Ты узнаешь его из тысячи..." Margin="0, 20, 20, 20" FontSize="17" FontAttributes="None" TextColor="Black"></Label>
        <Frame Margin="0, 0, 20, 0" HeightRequest="60" WidthRequest="320" CornerRadius="20">
            <Image Source="games.png" Margin="-20" Aspect="AspectFill"/>
        </Frame>
        
        <Button x:Name="btn1" Margin="0, 20, 20, 20" Text="Таганрог" TextTransform="None" FontAttributes="Bold" FontSize="24" HeightRequest="92" CornerRadius="20" BackgroundColor="#ffdd2c" ></Button>
        <Button x:Name="btn2" Margin="0, 0, 20, 20" Text="Ростов-на-Дону" TextTransform="None" FontAttributes="Bold" FontSize="24" HeightRequest="92" CornerRadius="20" BackgroundColor="#ffdd2c" ></Button>
        <Button x:Name="btn3" Margin="0, 0, 20, 20" Text="All in" TextTransform="None" FontAttributes="Bold" FontSize="24" HeightRequest="92" CornerRadius="20" BackgroundColor="#ffdd2c" ></Button>
    </StackLayout>
</ContentPage>