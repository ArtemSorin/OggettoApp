<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OggettoApp.MedicalPage">
    <StackLayout>
        <Label Text="Больничный" TextColor="Black" FontSize="24" Padding="20, 42, 0, 0" FontAttributes="Bold"/>

        <Entry
            Text="Причина больничного"
            VerticalOptions="Center"
            HorizontalOptions="Start" 
            BackgroundColor="Transparent"
            Margin="20, 108, 0, 0"
            WidthRequest="320"
            HeightRequest="90"
            TextTransform="None"
            FontSize="20"
            />

        <Button 
            Text="Отправить"
            VerticalOptions="Center"
            HorizontalOptions="Start" 
            BackgroundColor="#ffdd2c"
            Margin="20, 16, 0, 0"
            WidthRequest="177"
            HeightRequest="56"
            CornerRadius="20"
            TextTransform="None"
            FontSize="24"
            />
        <Button 
            Text="Я здоров"
            VerticalOptions="Center"
            HorizontalOptions="Center" 
            BackgroundColor="#ffdd2c"
            Margin="0, 303, 0, 0"
            WidthRequest="177"
            HeightRequest="56"
            CornerRadius="20"
            TextTransform="None"
            FontSize="24"
            />
    </StackLayout>
</ContentPage>